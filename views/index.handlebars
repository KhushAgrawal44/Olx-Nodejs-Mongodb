<div class="jumbotron text-center">
  <h1 class="display-4 IndexTitle">OLX PAKISTAN</h1>
  <h2 class="lead IndexTitle2">Pakistan's Largest Marketplace</h2>
  <a href="/ideas/add" class="btn btn-danger btn-lg IndexButton">Submit An Ad</a>
</div>


{{#each ideas}}
<div class="allAds d-inline-block">
  <div class="card" style="width: 18rem" ; "border-radius: 15px">
    <img class="card-img-top" src="">
    <div class="card-body">
      <h3 class="card-title" id="card-title">{{title}}</h3>
      <h4 class="card-text" id="card-text"><span class="glyphicon glyphicon-map-marker"></span>Location:{{city}}</h4>
      <h3 class="card-text" id="card-price">Rs {{price}}</h3>

    <a class="btn btn-primary btn-block mb-2" href="/addView/{{id}}">BUY</a>

    </div>
  </div>
</div>
{{else}}


<p>No video ideas listed</p>
{{/each}}



